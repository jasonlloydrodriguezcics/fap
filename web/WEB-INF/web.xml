<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <!-- Derby Database Connection -->
    <context-param>
        <param-name>derbyJdbcClassName</param-name>
        <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <context-param>
        <param-name>derbyDbUsername</param-name>
        <param-value>app</param-value>
    </context-param>
    <context-param>
        <param-name>derbyDbPassword</param-name>
        <param-value>app</param-value>
    </context-param>
    <context-param>
        <param-name>derbyJdbcDriverUrl</param-name>
        <param-value>jdbc:derby://localhost:1527/UserDB</param-value>
    </context-param>
    
    <!-- MySQL Database Connection -->
    <context-param>
        <param-name>mysqlJdbcClassName</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlDbUsername</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlDbPassword</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlJdbcDriverUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/mysql</param-value>
    </context-param>
    
    <!-- Encryption -->
    <context-param>
        <param-name>cipher</param-name>
        <param-value>AES</param-value>
    </context-param>
    <context-param>
        <param-name>key</param-name>
        <param-value>2CSE_FAP_GROUP_6</param-value>
    </context-param>
    
    <!-- Servlets -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>app.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
